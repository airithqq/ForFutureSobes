{
  "openapi": "3.0.4",
  "info": {
    "title": "ForFutureSobes.API",
    "version": "1.0"
  },
  "paths": {
    "/api/v1/geminiGeminiApi/ask": {
      "post": {
        "tags": [
          "GeminiApi"
        ],
        "summary": "Ask Gemini about task that not completed",
        "parameters": [
          {
            "name": "variant",
            "in": "query",
            "schema": {
              "enum": [
                "Short",
                "Detailed"
              ],
              "type": "string"
            }
          },
          {
            "name": "taskId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/task/GetAllTasks": {
      "get": {
        "tags": [
          "Tasks"
        ],
        "summary": "Get all existing tasks",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/task/GetTask": {
      "get": {
        "tags": [
          "Tasks"
        ],
        "summary": "Get tasks by theme",
        "parameters": [
          {
            "name": "themeName",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/task/GetById": {
      "get": {
        "tags": [
          "Tasks"
        ],
        "summary": "Get task by id",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/task/GetUncompletedTasks": {
      "get": {
        "tags": [
          "Tasks"
        ],
        "summary": "Get all uncompleted tasks by user",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/task/GetTaskByPriority": {
      "get": {
        "tags": [
          "Tasks"
        ],
        "summary": "Get task`s by priorities, available via the drop-down menu",
        "parameters": [
          {
            "name": "priority",
            "in": "query",
            "schema": {
              "enum": [
                "Low",
                "Middle",
                "High"
              ],
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/task/CreateNewTask": {
      "post": {
        "tags": [
          "Tasks"
        ],
        "summary": "Create new task for existing theme",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            },
            "text/json": {
              "schema": {
                "type": "string"
              }
            },
            "application/*+json": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/task/UpdateExistingTheme": {
      "put": {
        "tags": [
          "Tasks"
        ],
        "summary": "Update existing task and theme",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "themeName",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/task/DeleteTasks": {
      "delete": {
        "tags": [
          "Tasks"
        ],
        "summary": "Delete all tasks that belong`s to current theme",
        "parameters": [
          {
            "name": "themeName",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/theme/GetAllThemes": {
      "get": {
        "tags": [
          "Themes"
        ],
        "summary": "Get all existing themes",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Theme"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Theme"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Theme"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/theme/GetThemeById": {
      "get": {
        "tags": [
          "Themes"
        ],
        "summary": "Get theme by id",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/theme/CreateNewTheme": {
      "post": {
        "tags": [
          "Themes"
        ],
        "summary": "Create new unique theme",
        "parameters": [
          {
            "name": "themeName",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/theme/Delete": {
      "delete": {
        "tags": [
          "Themes"
        ],
        "summary": "Delete theme",
        "parameters": [
          {
            "name": "themeName",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TaskEntity": {
        "type": "object",
        "properties": {
          "theme": {
            "$ref": "#/components/schemas/Theme"
          },
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "isCompleted": {
            "type": "boolean"
          },
          "themeId": {
            "type": "integer",
            "format": "int32"
          },
          "priority": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Theme": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "tasks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TaskEntity"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}